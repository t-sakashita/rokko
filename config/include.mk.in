#-----------------------------------------------------------------------------
#
# include.mk - Rokko Make configuration file for external projects.
#
# Usage:
#   include $(PREFIX)/share/rokko/include.mk

# The Rokko root directory.
ROKKO_ROOT_DIR = @CMAKE_INSTALL_PREFIX@

# Rokko C/Fortran bindings
ROKKO_C_BINDING = @BUILD_C_BINDING@
ROKKO_Fortran_BINDING  = @BUILD_Fortran_BINDING@

# The Boost Root Dir used by Rokko
ROKKO_Boost_ROOT_DIR = @Boost_ROOT_DIR@
ROKKO_Boost_CPPFLAGS = -I@Boost_INCLUDE_DIR@
ROKKO_Boost_LIBS = @Boost_LIBS@

# Solvers
ROKKO_BLAS_LIBS = @BLAS_LIBS@
ROKKO_LAPACK_LIBS = @LAPACK_LIBS@
ROKKO_SCALAPACK_LIBS = @SCALAPACK_LIBS@

ROKKO_EIGENEXA_CPPFLAGS = -I@EIGENEXA_INCLUDE_DIR@
ROKKO_EIGENEXA_LIBS = @EIGENEXA_LIBS@

ROKKO_ELEMENTAL_CPPFLAGS = -I@ELEMENTAL_INCLUDE_DIR@
ROKKO_ELEMENTAL_LIBS = @ELEMENTAL_LIBS@

ROKKO_ELPA_LIBS = @ELPA_LIBS@

ROKKO_ANASAZI_CPPFLAGS = -I@ANASAZI_INCLUDE_DIR@
ROKKO_ANASAZI_LIBS = @ANASAZI_LIBS@

ROKKO_PETSC_CPPFLAGS = -I@PETSC_INCLUDE_DIR@
ROKKO_PETSC_LIBS = @PETSC_LIBS@
ROKKO_SLEPC_CPPFLAGS = -I@SLEPC_INCLUDE_DIR@
ROKKO_SLEPC_LIBS = @SLEPC_LIBS@

# Rokko Libraries
ROKKO_CPPFLAGS = -I$(ROKKO_ROOT_DIR)/include $(ROKKO_EIGENEXA_CPPFLAGS) $(ROKKO_ELEMENTAL_CPPFLAGS) $(ROKKO_ANASAZI_CPPFLAGS) $(ROKKO_PETSC_CPPFLAGS) $(ROKKO_SLEPC_CPPFLAGS) $(ROKKO_Boost_CPPFLAGS)
ROKKO_LDFLAGS = -L$(ROKKO_ROOT_DIR)/lib
ROKKO_LIBS = -lrokko $(ROKKO_EIGENEXA_LIBS) $(ROKKO_ELEMENTAL_LIBS) $(ROKKO_ELPA_LIBS) $(ROKKO_ANASAZI_LIBS) $(ROKKO_PETSC_LIBS) $(ROKKO_SLEPC_LIBS) $(ROKKO_SCALAPACK_LIBS) $(ROKKO_LAPACK_LIBS) $(ROKKO_BLAS_LIBS) $(ROKKO_Boost_LIBS)
ROKKO_C_LIBS = -lrokko_c
ROKKO_Fortran_LIBS = -lrokko_fortran
