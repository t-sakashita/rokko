+++ elpa_lib-201305/CMakeLists.txt	2013-06-07 19:13:50.000000000 +0900
@@ -0,0 +1,20 @@
+cmake_minimum_required(VERSION 2.8)
+project(ELPA C Fortran)
+option(BUILD_SHARED_LIBS "Build shared libraries" ON)
+
+# RPATH setting
+if(APPLE)
+  set(CMAKE_INSTALL_NAME_DIR "${CMAKE_INSTALL_PREFIX}/lib")
+else(APPLE)
+  set(CMAKE_INSTALL_RPATH "${CMAKE_INSTALL_PREFIX}/lib")
+  set(CMAKE_SKIP_BUILD_RPATH FALSE)
+  set(CMAKE_BUILD_WITH_INSTALL_RPATH FALSE)
+  set(CMAKE_INSTALL_RPATH_USE_LINK_PATH TRUE)
+endif(APPLE)
+
+find_package(MPI)
+set(CMAKE_EXE_LINKER_FLAGS ${MPI_C_LINK_FLAGS})
+
+add_subdirectory(ELPA_2011.12)
+add_subdirectory(ELPA_2013.02.BETA)
+add_subdirectory(ELPA_development_version)
