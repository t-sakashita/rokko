diff -urN elpa_lib.orig/CMakeLists.txt elpa_lib/CMakeLists.txt
--- elpa_lib.orig/CMakeLists.txt	1970-01-01 09:00:00.000000000 +0900
+++ elpa_lib/CMakeLists.txt	2013-06-07 08:36:02.000000000 +0900
@@ -0,0 +1,8 @@
+cmake_minimum_required(VERSION 2.8)
+project(ELPA C Fortran)
+option(BUILD_SHARED_LIBS "Build shared libraries" ON)
+find_package(MPI)
+set(CMAKE_EXE_LINKER_FLAGS ${MPI_C_LINK_FLAGS})
+add_subdirectory(ELPA_2011.12)
+add_subdirectory(ELPA_2013.02.BETA)
+add_subdirectory(ELPA_development_version)
diff -urN elpa_lib.orig/ELPA_2011.12/CMakeLists.txt elpa_lib/ELPA_2011.12/CMakeLists.txt
--- elpa_lib.orig/ELPA_2011.12/CMakeLists.txt	1970-01-01 09:00:00.000000000 +0900
+++ elpa_lib/ELPA_2011.12/CMakeLists.txt	2013-06-07 09:30:09.000000000 +0900
@@ -0,0 +1,11 @@
+set(SOURCES src/elpa1.f90 src/elpa2.f90 src/elpa2_kernels.f90)
+add_library(libelpa-2011.12 ${SOURCES})
+target_link_libraries(libelpa-2011.12 ${SCALAPACK_LIB})
+install(TARGETS libelpa-2011.12 ARCHIVE DESTINATION lib LIBRARY DESTINATION lib RUNTIME DESTINATION bin)
+
+set(TARGETS read_real read_real_gen test_complex test_complex2 test_complex_gen test_real test_real2 test_real_gen)
+foreach(t ${TARGETS})
+  add_executable(${t}-2011.12 test/${t}.f90)
+  set_target_properties(${t}-2011.12 PROPERTIES OUTPUT_NAME ${t})
+  target_link_libraries(${t}-2011.12 libelpa-2011.12)
+endforeach(t ${TARGETS})
